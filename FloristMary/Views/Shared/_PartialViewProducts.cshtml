@model IEnumerable<Product>

@foreach (var item in Model)
      {
         <div class="box">  
            <div class="image">
               <img src="/media/products/@item.Image" class="img-fluid" alt="" />
               <div class="icons">
                  <p>
                     <a class="cart-btn" asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">Add to cart</a>
                  </p>
               </div>
            </div>
            <div class="content"> 
               <h4>@item.Name</h4>
               <div class="price"> @item.Price.ToString("C2") </div>
            </div>
         </div>
      }